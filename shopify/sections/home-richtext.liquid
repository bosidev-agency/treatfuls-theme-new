{% assign sec_sett = section.settings %}

<section
	class="home-richtext"
	data-section-id="{{- section.id -}}"
	data-section-type="home-richtext"
>
	<div class="container home-richtext__container">
		{%- if sec_sett.title != blank -%}
			<h2 class="home-richtext__title title-bg title-bg--primary">{{ sec_sett.title }}</h2>
		{%- endif -%}
		{%- if sec_sett.first_text != blank -%}
			<div class="home-richtext__text home-richtext__text--first subtitle">
				{{- sec_sett.first_text -}}
				{%- if sec_sett.img_on_hover.src != blank -%}
					<picture class="home-richtext__hover-img js-home-tooltip-img">
						<source
							srcset="{{ sec_sett.img_on_hover.src | img_url: '423x' }} 1x, {{ sec_sett.img_on_hover.src | img_url: '846x' }} 2x, {{ sec_sett.img_on_hover.src | img_url: '1269x' }} 3x"
							media="(min-width: 991px)">
						<source
							srcset="{{ sec_sett.img_on_hover.src | img_url: '317x' }} 1x, {{ sec_sett.img_on_hover.src | img_url: '634x' }} 2x,{{ sec_sett.img_on_hover.src | img_url: '951x' }} 3x"
							media="(min-width: 389px)">
						<img src="{{ sec_sett.img_on_hover.src | img_url: '317x' }} 1x"
								 srcset="{{ sec_sett.img_on_hover.src | img_url: '317x' }} 1x, {{ sec_sett.img_on_hover.src | img_url: '634x' }} 2x, {{ sec_sett.img_on_hover.src | img_url: '951x' }} 3x"
								 alt="">
					</picture>
				{%- endif -%}
			</div>
		{%- endif -%}
		{%- if sec_sett.second_text != blank  -%}
			<div class="home-richtext__text subtitle">{{- sec_sett.second_text -}}</div>
		{%- endif -%}
		{%- if sec_sett.link_url != blank -%}
			<a href="{{- sec_sett.link_url -}}" class="button button--secondary home-richtext__button">{{- sec_sett.link_text -}}</a>
		{%- endif -%}
	</div>

  <div class="base-triangular-line">
		{%- render 'icon-triangular-line' -%}
	</div>
</section>


{% schema %}
{
	"name": "Home rich text",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"info": "Need wrap words to see background, <span><span>example</span></span>",
			"default": "hungry for a <span><span>change?</span></span>"
		},
		{
			"type": "textarea",
			"id": "first_text",
			"label": "First Paragraph",
			"info": "Need wrap words <span class='tooltip'>example</span> to see hover image",
			"default": "Bist du bereit mit uns gemeinsam die Snack-Industrie zu revolutionieren? Wir wollen Snacks die besser sind, als das was <span class='tooltip'>der Markt uns gerade bietet</span>. Wir wollen Süßigkeiten die geil schmecken und besser für dich und die Umwelt sind."
		},
		{
			"type": "image_picker",
			"id": "img_on_hover",
			"label": "Image on link hover"
		},
		{
			"type": "textarea",
			"id": "second_text",
			"label": "Second Paragraph",
			"default": "Wir sind Macher und Träumerinnen zugleich und haben aus diesem Grund treatfuls ins Leben gerufen. Mach mit und probiere und überzeuge dich selbst, wie lecker vegane und natürliche Snacks sein können."
		},
		{
			"type": "url",
			"id": "link_url",
			"label": "Link Url"
		},
		{
			"type": "text",
			"id": "link_text",
			"label": "Link text",
			"default": "Jetzt Probierpaket kaufen"
		}
	],
	"presets": [
		{
			"name": "Home rich text",
			"category": "Homepage"
		}
	]
}
{% endschema %}
