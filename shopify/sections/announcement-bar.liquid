<div id="shopify-section-announcement-bar" class="shopify-section">
  <div class="announcement-bar">
    <div class="announcement-bar__text">
      <span>{{ section.settings.text }}</span>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Announcement Bar",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Announcement Bar"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}